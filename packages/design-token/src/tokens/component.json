{
  "button": {
    "color": {
      "primary": {
        "default": {
          "bg": {
            "$type": "color",
            "$value": "{color.accent.primary}"
          },
          "fg": {
            "$type": "color",
            "$value": "{color.text.inverse}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.border.default}"
          }
        },
        "hover": {
          "bg": {
            "$type": "color",
            "$value": "{color.accent.secondary}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.text.primary}"
          },
          "fg": {
            "$type": "color",
            "$value": "{color.text.secondary}"
          }
        },
        "disabled": {
          "bg": {
            "$type": "color",
            "$value": "{color.accent.primary}"
          },
          "fg": {
            "$type": "color",
            "$value": "{color.text.primary}"
          },
          "border": {
            "$type": "color",
            "$value": "{color.border.default}"
          }
        }
      }
    },
    "text": {
      "$type": "typography",
      "$value": "{typography.inline.md}"
    },
    "sizing": {
      "md": {
        "height": {
          "$type": "sizing",
          "$value": "{sizing.control.md}"
        }
      },
      "lg": {
        "height": {
          "$type": "sizing",
          "$value": "{sizing.control.md}"
        }
      }
    },
    "spacing": {
      "md": {
        "paddingInline": {
          "$type": "spacing",
          "$value": "{spacing.stack.sm}"
        },
        "paddingBlock": {
          "$type": "spacing",
          "$value": "{spacing.stack.xs}"
        }
      },
      "lg": {
        "paddingInline": {
          "$type": "spacing",
          "$value": "{spacing.stack.sm}"
        },
        "paddingBlock": {
          "$type": "spacing",
          "$value": "{spacing.stack.xs}"
        }
      }
    }
  },
  "input": {
    "text": {
      "$type": "typography",
      "$value": "{typography.inline.md}"
    },
    "sizing": {
      "md": {
        "height": {
          "$type": "sizing",
          "$value": "{sizing.control.md}"
        }
      }
    },
    "spacing": {
      "md": {
        "paddingInline": {
          "$type": "spacing",
          "$value": "{spacing.stack.sm}"
        },
        "paddingBlock": {
          "$type": "spacing",
          "$value": "{spacing.stack.xs}"
        }
      }
    },
    "color": {
      "default": {
        "bg": {
          "$type": "color",
          "$value": "{color.surface.base}"
        },
        "fg": {
          "$type": "color",
          "$value": "{color.text.inverse}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.default}"
        },
        "placeholder": {
          "$type": "color",
          "$value": "{color.text.muted}"
        }
      },
      "hover": {
        "border": {
          "$type": "color",
          "$value": "{color.text.primary}"
        }
      },
      "disabled": {
        "bg": {
          "$type": "color",
          "$value": "{color.accent.primary}"
        },
        "fg": {
          "$type": "color",
          "$value": "{color.text.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.default}"
        }
      },
      "focus": {
        "ring": {
          "$type": "color",
          "$value": "{color.accent.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.default}"
        }
      },
      "error": {
        "fg": {
          "$type": "color",
          "$value": "{color.status.error}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.default}"
        }
      }
    }
  }
}